<!DOCTYPE html>
<html>
<head>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!--for three emojis in rating-->
    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">

  <link type = "text/css" rel="stylesheet" href="css/style.css">
  <link type = "text/css" rel="stylesheet" href="css/navbarstyle.css">
  <link type = "text/css" rel="stylesheet" href="css/explore.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="../js/explore.js"></script>
  <script type="text/javascript" src="../js/rate.js"></script>

  <title>FOODme</title>
</head>

  <body>

    <!-- Menu Bar -->
    <div id="footer">
      <div class="col-xs-12 navbar-inverse navbar-fixed-bottom">
        <div class="row" id="bottomNav">
          <div class="col-xs-3 text-center"><a href="/exp"><i class="glyphicon glyphicon-globe"></i><br><p>Explore</p></a></div>
          <div class="col-xs-3 text-center"><a href="/bookmarks"><i class="glyphicon glyphicon-bookmark"></i><br><p>Bookmarks</p></a></div>
          <div class="col-xs-3 text-center"><a href="/friends"><i class="fa fa-users"></i><br><p>Friends</p></a></div>
          <div class="col-xs-3 text-center"><a href="/profile"><i class="glyphicon glyphicon-user"></i><br><p>Profile</p></a></div>
        </div>
      </div>
    </div>


    <!-- Menu Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="nav pull-left"><span class="glyphicon glyphicon-chevron-left" onclick="goBack()"></span></a>
            <script>
              function goBack() {
                window.history.back();
              }
            </script>
          <a class="navbar-brand" href="/exp">FOODme</a>

          <a href="/upload" class="dropdown-item nav pull-right"><span class="glyphicon glyphicon-edit"></span><p>Review</p></a>
        </div>
      </div>
    </nav>


   <div id = "container">

    <!--go back to explore food-->
    <div>
      <a href = "#bmk_confirm" id = "book_button" data-rel = "popup"><button>Bookmark</button></a>
    </div>

    <!--review page for specific dish after clicking on image-->
    <div id = "dish_info">
      <h3 id = "restaurant">{{restaurant}}</h3>
      <img src = "../{{imgURL}}" id = 'dishIMG'/>
      <h3 id = "dish_name">{{name}}</h3>

      <div id = "faces">
          <div><i class = "em em-disappointed" id = "ab"></i><p  id = "dis"></p></div>
          <div><i class = "em em-confused" id = "ab"></i> <p  id = "meh"></p></div>
          <div><i class = "em em-smiley" id = "ab"></i><p  id = "yay"></p></div>
      </div>

      <!--dislay good and bad hashtags-->
      <div id = "hashtags">

        <div class = "ups">
          <div><i class = "em em-thumbsup" class = "thumbs"></i></div>
          <div id = "u1">{{u1}}</div>
          <div id = "u2">{{u2}}</div>
          <div id = "u3">{{u3}}</div>
        </div>
        <div class = "downs">
          <div><i class = "em em-thumbsdown" class = "thumbs"></i></div>
          <div id = "d1">{{d1}}</div>
          <div id = "d2">{{d2}}</div>
          <div id = "d3">{{d3}}</div>
        </div>
      </div> <!--end of hashtag ratings-->
    </div>
    <div id = "rate_btn">
        <a href = '/rate'><button>RATE IT</button></a>
    </div>

  </div> <!--end of container-->

  </body>
</html>
